import java.util.*;

// Simple Stack using ArrayList
class MyStack {
    private ArrayList<String> stack = new ArrayList<>();

    public void push(String item) {
        stack.add(item);
    }

    public String pop() {
        if (stack.isEmpty()) return "Nothing to undo!";
        return stack.remove(stack.size() - 1);
    }

    public boolean isEmpty() {
        return stack.isEmpty();
    }
}

// Employee class
class Employee {
    int id;
    String name;
    double salary;

    // Constructor with simple error check
    public Employee(int id, String name, double salary) throws Exception {
        if (id <= 0) throw new Exception("Invalid ID!");
        if (name == null || name.isEmpty()) throw new Exception("Name is empty!");
        if (salary < 0) throw new Exception("Salary cannot be negative!");
        this.id = id;
        this.name = name;
        this.salary = salary;
    }

    public String toString() {
        return id + " - " + name + " : " + salary;
    }
}

// Payroll System
class PayrollSystem {
    private ArrayList<Employee> employees = new ArrayList<>();
    private MyStack history = new MyStack();

    public void addEmployee(Employee e) {
        employees.add(e);
        history.push("Added " + e);
    }

    public void removeEmployee(int id) {
        for (Employee e : employees) {
            if (e.id == id) {
                employees.remove(e);
                history.push("Removed " + e);
                return;
            }
        }
        System.out.println("Employee not found!");
    }

    public void showPayroll() {
        System.out.println("\n--- Payroll ---");
        for (Employee e : employees) {
            System.out.println(e);
        }
    }

    public void undo() {
        if (!history.isEmpty())
            System.out.println("Undo: " + history.pop());
        else
            System.out.println("Nothing to undo!");
    }
}

// Main Program
public class Main1 {
    public static void main(String[] args) {
        PayrollSystem ps = new PayrollSystem();

        try {
            Employee e1 = new Employee(1, "Alice", 30000);
            Employee e2 = new Employee(2, "Bob", 25000);
            ps.addEmployee(e1);
            ps.addEmployee(e2);

            // Invalid employee (error)
            Employee e3 = new Employee(3, "", -5000);
            ps.addEmployee(e3);

        } catch (Exception ex) {
            System.out.println("Error: " + ex.getMessage());
        }

        ps.showPayroll();
        ps.removeEmployee(2);
        ps.showPayroll();
        ps.undo();
        ps.showPayroll();
    }
}
